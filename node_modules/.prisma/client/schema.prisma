// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[]
  services  Service[]

  @@map("users")
}

model Vehicle {
  id          String     @id @default(cuid())
  userId      String
  make        String
  model       String
  year        Int
  vin         String?
  mileage     Int
  color       String?
  plateNumber String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  services    Service[]
  reminders   Reminder[]

  @@map("vehicles")
}

model Service {
  id          String      @id @default(cuid())
  vehicleId   String
  userId      String
  type        ServiceType
  description String
  cost        Float
  mileage     Int
  serviceDate DateTime
  provider    String
  location    String?
  photos      String?
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  vehicle     Vehicle     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("services")
}

model Reminder {
  id          String      @id @default(cuid())
  vehicleId   String
  type        ServiceType
  description String
  dueDate     DateTime?
  dueMileage  Int?
  isCompleted Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  vehicle     Vehicle     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("reminders")
}

enum ServiceType {
  OIL_CHANGE
  TIRE_ROTATION
  BRAKE_SERVICE
  ENGINE_TUNE_UP
  TRANSMISSION
  BATTERY
  INSPECTION
  REGISTRATION
  OTHER
}
